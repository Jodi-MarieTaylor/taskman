@model SMS_ass1.Models.Task

@{
    ViewBag.Title = "createsub";
}


@using (Html.BeginForm("create_task", "Task", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Create Subtask for Task @ViewBag.id</h3>
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      

        <div class="form-group">
            <label for="model.title" class="center-align" style="font-size: 13px; ">Title</label>

                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
          
        </div>

        <div class="form-group">
            <label for="model.description" class="center-align" style="font-size: 13px; ">Description</label>

                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
          
          
     
            <label for="model.due" class="center-align" style="font-size: 13px; ">Due Date</label>

            @Html.EditorFor(model => model.due, new { htmlAttributes = new { @class = "form-control", Type = "date" } })
            @Html.ValidationMessageFor(model => model.due, "", new { @class = "text-danger" })


        </div>

        <div class="form-group">

            <label for="model.category" class="center-align" style="font-size: 13px; ">Category</label>
            <select id="model.category" name="category" class="form-control">

                <option>General</option>
                <option>Home</option>
                <option>Work</option>
                <option>Personal</option>
                <option>Event</option>
                <option>Family</option>
            </select>


        </div>




        <div class="form-group">

            <label for="model.priority" class="center-align" style="font-size: 13px; ">Priority</label>
            <select id="priority-filter" name="priority" class="form-control">

                <option>Low</option>
                <option>Medium</option>
                <option>High</option>
                <option>Urgent</option>
            </select>


        </div>

        <div class="form-group">

            <label for="model.re_dates" class="center-align" style="font-size: 13px; ">Recurrence</label>

            <select id="model.re_dates" name="re_dates" class="form-control">

                <option>Daily</option>
                <option>Weekly</option>
                <option>Monthly</option>
                <option>Yearly</option>



            </select>


        </div>
        <div class="form-group">

            <label for="model.status" class="center-align" style="font-size: 13px; ">Status</label>

            <select id="model.status" name="status" class="form-control">

                <option>Not Started</option>
                <option>In Progress</option>
                <option>Completed</option>
            </select>


        </div>

        

        <div class="form-group">
            <label for="model.notes" class="center-align" style="font-size: 13px; ">Notes</label>

            @Html.TextAreaFor(model => model.notes, new { htmlAttributes = new { @class = "form-control", style = "font-size: 20px;" } })
            @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })


        </div>

        <div class="form-group">
            <label for="model.notes" class="center-align" style="font-size: 13px; ">Parent Task</label>
            <input  class="form-control" type="text" name="parent_task" value="@ViewBag.id"/>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
      
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

